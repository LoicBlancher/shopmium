# editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space

[*.{css,less,scss}]
indent_style = space
indent_size = 2

[{package.json,.jshintrc,gulpfile.js}]
indent_style = space
indent_size = 2

[{*.txt,wp-config-sample.php,wp-config.php}]
end_of_line = crlf
